    </EmbeddedResource>
    <EmbeddedResource Update="Views\Calendario\NuevoEventoView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\Chat\ChatView.xaml">
