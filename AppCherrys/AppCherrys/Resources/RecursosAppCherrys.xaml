<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCherrys.Resources.RecursosAppCherrys">

    <x:Double x:Key="TitleFontSize">20</x:Double>
    <x:Double x:Key="BigFontSize">16</x:Double>
    <x:Double x:Key="MediunFontSize">14</x:Double>
    <x:Double x:Key="SmallFontSize">12</x:Double>
    <x:String x:Key="BasicFontFamily">Arial</x:String>

    <Style x:Key="estiloTituloPagina" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTitulos}"/>
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style x:Key="estiloTitulos" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTitulos}"/>
        <Setter Property="FontSize" Value="{DynamicResource BigFontSize}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style x:Key="estiloSubTitulos" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource ColorTitulos}"/>
    </Style>

</ResourceDictionary>