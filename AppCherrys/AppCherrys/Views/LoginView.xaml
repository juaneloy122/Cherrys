<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:AppCherrys.Constantes.Localization"
             xmlns:controlessyncfusion="clr-namespace:ST_ControlesCliente.ControlesSyncFusion;assembly=ST_ControlesCliente"
             xmlns:estilos="clr-namespace:AppCherrys"
             mc:Ignorable="d"
             x:Class="AppCherrys.Views.LoginView"
              NavigationPage.HasNavigationBar="false">
  
    <ContentPage.Content>
       
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="0,20,0,20">
                <Image Source="QKT.png"/>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <controlessyncfusion:SF_TextInputLayout 
                    UnfocusedColor="Green"
                    ContainerBackgroundColor="{Binding BackgroundColor}"
                    FocusedColor="Red"
                    ContainerType="Outlined"
                    HelperText="Name on your card"
                    Hint="Name"
                    IsHintAlwaysFloated="True"
                    OutlineCornerRadius="5">
                    <Entry x:Name="name" Text=""/>
                </controlessyncfusion:SF_TextInputLayout>

                <Label Text="ESTO ES UNA PRUEBA"/>
                <Label Text="ESTO ES UNA PRUEBA"/>
                <Label Text="ESTO ES UNA PRUEBA"/>

                <Entry x:Name="UsernameEntry"
                       Text="{Binding Username}"
                       Placeholder="{x:Static local:Messages.Usuario}" />
                <Entry x:Name="PasswordEntry"
                       Text="{Binding Password}"
                       Placeholder="{x:Static local:Messages.Password}"
                       IsPassword="True"/>
                <Label Text="Credenciales incorrectas" 
                       IsVisible="{Binding AreCredentialsInvalid}" 
                       TextColor="Red"/>
            </StackLayout>
            <Button Grid.Row="2" Text="{x:Static local:Messages.Autenticate}" Command="{Binding AuthenticateCommand}" CornerRadius="20" BackgroundColor="#FFDE55" TextColor="#FF8500"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>